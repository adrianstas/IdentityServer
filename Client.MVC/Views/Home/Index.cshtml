@{
    ViewBag.Title = "MVC Client";
}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-offset-4 col-md-4">
            <h2>Public values</h2>
            @if (Model != null && Model.PublicValues != null)
            {
                <ul class="bg-success">
                    @foreach (var item in Model.PublicValues)
                    {
                        <li>@item</li>
                    }
                </ul>
            }
            else if (Model != null && !Model.PublicAuthorized)
            {
                <p class="bg-danger">Not authorized</p>
            }

            <h2>Management values</h2>
            @if (Model != null && Model.ManagementAuthorized && Model.ManagementValues != null)
            {
                <ul class="bg-success">
                    @foreach (var item in Model.ManagementValues)
                    {
                        <li>@item</li>
                    }
                </ul>
            }
            else if (Model != null && !Model.ManagementAuthorized)
            {
                <p class="bg-danger">Not authorized</p>
            }

            <h2>Recruitment values</h2>
            @if (Model != null && Model.RecruitmentAuthorized && Model.RecruitmentValues != null)
            {
                <ul class="bg-success">
                    @foreach (var item in Model.RecruitmentValues)
                    {
                        <li>@item</li>
                    }
                </ul>
            }
            else if (Model != null && !Model.RecruitmentAuthorized)
            {
                <p class="bg-danger">Not authorized</p>
            }

            <h2>Secret values</h2>
            @if (Model != null && Model.SecretAuthorized && Model.SecretValues != null)
            {
                <ul class="bg-success">
                    @foreach (var item in Model.SecretValues)
                    {
                        <li>@item</li>
                    }
                </ul>
            }
            else if (Model != null && !Model.SecretAuthorized)
            {
                <p class="bg-danger">Not authorized</p>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            @Html.ActionLink("Get API Data", "GetApiValues", null, new { @class = "btn btn-lg btn-primary" })
            <button class="btn btn-lg btn-primary" type="submit" onclick="localStorage.clear();">Clear storage</button>
        </div>
    </div>
</div>